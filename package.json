{
  "name": "oldworldcharm",
  "version": "0.1.0",
  "description": "An open-source visual website builder that brings old-world craftsmanship to modern web development",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/skprasad-korture/oldworldcharm.git"
  },
  "author": "Prasad Korture <skprasad.korture@gmail.com>",
  "homepage": "https://github.com/skprasad-korture/oldworldcharm#readme",
  "bugs": {
    "url": "https://github.com/skprasad-korture/oldworldcharm/issues"
  },
  "type": "module",
  "scripts": {
    "build": "pnpm -r build",
    "dev": "pnpm -r --parallel dev",
    "dev:api": "pnpm --filter @oldworldcharm/api dev",
    "dev:editor": "pnpm --filter @oldworldcharm/editor dev",
    "test": "pnpm -r test",
    "lint": "eslint packages/*/src --ext .ts,.tsx",
    "format": "prettier --write .",
    "type-check": "pnpm -r type-check",
    "prepare": "is-ci || husky",
    "db:setup": "pnpm --filter @oldworldcharm/api db:setup",
    "db:test": "pnpm --filter @oldworldcharm/api db:test"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@types/node": "^22.10.0",
    "@typescript-eslint/eslint-plugin": "^8.15.0",
    "@typescript-eslint/parser": "^8.15.0",
    "eslint": "^9.15.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.33.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^8.0.3",
    "is-ci": "^4.1.0",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.0",
    "prettier-plugin-tailwindcss": "^0.5.7",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.12.0"
}
